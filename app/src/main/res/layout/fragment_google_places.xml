<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.GooglePlacesFragment">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.GoogleMapFragment"
            android:id="@+id/google_places_map"
            class="com.google.android.gms.maps.SupportMapFragment">
    </fragment>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@android:drawable/ic_menu_compass"
                android:background="@drawable/edit_text_bg"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/address_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>